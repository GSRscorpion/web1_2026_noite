<body>
    <h1 id="titulo" onmouseover="alert('Passou aqui!')">Passe o mouse aqui.</h1>

    <button id="btn-hide" onclick="alteraPagina()">Clique aqui!</button>

    <br><br>

    <h1 id="numero"> 0 </h1>
    <button id="mais" onclick="somar()"> + </button>
    <button id="menos" onclick="subtrair()"> - </button>

    <script>
        const numero = document.getElementById("numero")
        const titulo = document.getElementById("titulo")
        const btnHide = document.getElementById("btn-hide")

        var num = 0

        function somar() {
            num++
            numero.innerHTML = num
        }

        function subtrair() {
            num--
            numero.innerHTML = num
        }

        function alteraPagina() {
            titulo.style.color = "blue"
            btnHide.innerHTML = "Bem mandado..."
        }



